@model IEnumerable<Doctor>
<h1>Doctors and Specialty</h1>
<br />
<br />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name </th>
            <th>Specialty</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.FullName</th>
            <th>@item.Description     </th>

            <th>
                <div class="btn-group">
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID"><i class="far fa-list-alt"></i> Details</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="far fa-edit"></i>        Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i>     Delete</a>
                </div>

            </th>
        </tr>
    }
        </tbody>
    </table>