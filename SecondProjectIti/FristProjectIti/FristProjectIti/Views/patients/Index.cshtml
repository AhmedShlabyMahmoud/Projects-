    @model IEnumerable<Patient>
    <h1>Patients</h1>
    <br />
    <br />
    <a asp-action="Create" class="btn btn-outline-success"> <i class="fas fa-plus"></i>
     Create</a>

        <form asp-action="Index">
             <div class="input-group">
                    <input type="text" name="searchText" value="@ViewBag.CurrenSearch"/>
                        <div class="input-group-append">
                             <button  type="submit" class="btn btn-secondary">                
                               <i class="fas fa-search"> Search </i>              
                              </button>
                        </div>
              </div>
          </form>


        <form asp-action="Index">
            <label>PageSize</label>
            <input type="number" name="pagesize" value="@ViewBag.CurrentPageSize" />
            <label>PageNumber</label>
            <input type="number" name="pagenumber" value="@ViewBag.CurrentPageNumber" />

            <button type="submit" > Go </button>
        </form>

        <form asp-action="Index">

            <input type="radio" name="orderType" value="asc" checked="@ViewBag.ascorder" />
            <label>Ascending</label>
            <input type="radio" name="orderType" value="desc" checked="@ViewBag.descorder" />
            <label>Descending</label>
            <input type="submit" value="order" class="btn btn-secondary">
        </form>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name </th>
                <th>Age</th>
                <th>Diagnesis</th>
                <th>Treatment</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Fullname</th>
                    <th>@item.Age     </th>
                    <th>@item.Diagnesis</th>
                    <th>@item.Treatment</th>
                    <th>@item.Notes</th>

                    <th>
                        <div class="btn-group">
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id"><i class="far fa-list-alt"></i> Details</a> 
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i>        Edit</a> 
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i>     Delete</a>
                        </div>

                    </th>
                </tr>
            }
        </tbody>
    </table>